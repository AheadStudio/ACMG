				left 0
				bottom 0
				display block
				width 70%
				height 2px
				background #979797
				transform rotate(-20deg) translateY(12px)

		.flex-new
		.flex-sale
			position absolute
			top 30px
			left -15px

			display flex
			align-items center
			justify-content center

			width 85px
			height 85px

			border-radius 50%

			font-weight 600

			text-transform uppercase
			text-align center

			background #b0b5da

			z-index 10
			letter-spacing 1px

		.flex-sale
			background $colorYellow

		&.load-events-item
			opacity 0
			transform translateY(50px)

