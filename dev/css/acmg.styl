/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)
$colorBlack = #000
$colorDark = #4A4A4A
$colorGray = #f7f7f7
$colorYellow = #FEE333
$colorDarkGray = #333333
$colorPink = #B0B5DA


/* fonts */
@font-face
	font-family "ProximaNovaRegular"
	src url("../fonts/ProximaNova-Regular.woff") format("woff")

@font-face
	font-family "ProximaNovaBold"
	src url("../fonts/ProximaNova-Bold.woff") format("woff")

@font-face
	font-family "ProximaNovaLight"
	src url("../fonts/ProximaNova-Light.woff") format("woff")

@font-face
	font-family "ProximaNovaSemibold"
	src url("../fonts/ProximaNova-Semibold.woff") format("woff")
/* //fonts */

/** page style **/
html
	min-height 100%

body
	position relative
	width 100%
	min-height 100%
	line-height 1
	cursor default
	font-family "ProximaNovaRegular"
	font-size 16px
	color $colorBlack

.page
	display block
	width 100%

	min-height 100vh

	margin 0 auto

.page-inner
	position relative
	display block
	margin 0 auto
	box-sizing border-box

	&--w1
		max-width 1290px
		width 100%
		padding 0 20px

	&--w2
		max-width 860px
		width 100%
		padding 0 20px

	&--w3
		max-width 750px
		width 100%
		padding 0 20px

body
	&.fixed-header
		.page-content
			margin-top 206px

		.page-header
			position fixed
			top 0
			left 0
			right 0
			width 100%
			margin-bottom 0

			opacity 0
			transform translateY(-150px)
			transition transform 0.3s $transitionAnimation
			z-index 1010

			.header-logo
				max-width 100px

		&--show
			.page-header
				opacity 1
				transform translateY(0)


.page-header
	display flex
	justify-content space-between
	align-items center
	padding 10px 30px
	box-sizing border-box

	margin-bottom 100px

	background $colorBlack

	.header-coll
		width 33.33333%

	.header-menu
		max-width 415px
		width 100%

		.header-menu-inner
			display flex
			justify-content space-between
			align-items center

			.header-menu-item-holder
				margin-right 20px

				&:last-child
					margin-right 0

		.header-menu-item
			&.active
				&:after
					content ""
					position absolute
					top 100%
					left 0
					width 100%
					height 1px
					background #fff
					opacity 1
					transform translateY(3px)
					transition background 0.3s $transitionAnimation

				&:hover
					&:after
						background $colorPink

	.header-logo
		display block
		text-align center

		max-width 215px

		margin 0 auto

		svg
			display block
			width 100%

	.header-userbar
		display flex
		justify-content flex-end
		align-items center

		width 100%

		.header-userbar-link
			display flex
			align-items center

			margin-right 30px

			color #fff
			text-decoration none

			&:last-child
				margin-right 0

			.header-userbar-name
				max-width 100px
				margin-right 10px

				overflow hidden
				color #fff

				&--mail
					position relative
					white-space nowrap
					overflow hidden
					text-overflow ellipsis

			.header-userbar-icon
				max-width 30px
				width 100%
				margin-right 5px

				svg
					width 100%

					path
						transition fill 0.3s $transitionAnimation

			&:hover
				.header-userbar-icon
					svg
						path
							fill $colorPink

.page-footer
	padding 55px 100px
	box-sizing content-box

	background #000

	.footer-row
		display flex
		justify-content space-between
		align-items start

		margin-bottom 120px

		&:last-child
			margin-bottom 0

		.footer-contacts
			display flex
			justify-content space-between
			align-items center

			.footer-contacts-logo
				max-width 140px
				width 100%

				margin-right 40px

				svg
					display block
					width 100%

			.footer-contacts-list
				.footer-contacts-item
					margin-bottom 15px

					&:last-child
						margin-bottom 0

					.footer-contacts-mobile
					.footer-contacts-mail
						font-size 18px

		.footer-dispatch
			max-width 490px
			width 100%

			.form-text
				color #fff
				margin-bottom 5px

			.form-item--text
			.form-item--textarea
				font-family "ProximaNovaRegular"
				&::-webkit-input-placeholder
					color #000


		.footer-link
			position relative
			transition color 0.3s $transitionAnimation

			&:after
				content ""
				position absolute
				top 120%
				left 0
				width 100%
				height 1px
				background #636363

				transition background 0.3s $transitionAnimation

			&:hover
				color $colorPink
				&:after
					background $colorPink

		.footer-privacy
			display block

			.footer-privacy-name
				color #fff

		.footer-cards
			display flex
			justify-content space-between
			align-items center

			.footer-cards-item
				max-width 90px
				width 100%
				height 30px
				margin-right 30px

				&:last-child
					margin-right 0

				.footer-cards-item-img
					display block
					height 100%

		.footer-social
			display flex
			justify-content space-between
			align-items center

			.footer-social-item
				margin-right 35px

				&:last-child
					margin-right 0

		.footer-creators-link
			display block

			.footer-creators-name
				position relative
				transition color 0.3s $transitionAnimation

				&:after
					content ""
					position absolute
					top 120%
					left 0
					width 100%
					height 1px
					background #636363

					transition background 0.3s $transitionAnimation

			&:hover
				.footer-creators-name
					color $colorPink

					&:after
						background $colorPink

/* link button */
.link
	text-decoration none
	color #000

.link-bold
	font-weight bold

.link-gray
	color #9B9B9B

.link-white
	color #fff

.link-pink
	color $colorPink

.link-color--pink
	transition color 0.3s $transitionAnimation

	&:hover
		color $colorPink

.link-opacity
	transition opacity 0.3s $transitionAnimation

	&:hover
		opacity 0.5

.link-pink--bottom
	position relative
	display inline

	transition color 0.3s $transitionAnimation

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorPink

		opacity 1

		transform translateY(3px)

		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&:hover
		color $colorPink

		&:after
			opacity 0
			transform translateY(10px)

.link-pink--bottom-reverse
	position relative
	display inline

	transition color 0.3s $transitionAnimation

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorPink

		opacity 0

		transform translateY(10px)

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		color $colorPink

		&:after
			opacity 1
			transform translateY(3px)

.link-black--bottom
	position relative
	display inline

	transition color 0.3s $transitionAnimation

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorBlack

		transform translateY(3px)

		transition background 0.3s $transitionAnimation

	&:hover
		color $colorPink

		&:after
			background $colorPink

.link-black--bottom-reverse
	position relative
	display inline

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorBlack
		opacity 0
		transform translateY(10px)
		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&:hover
		&:after
			opacity 1
			transform translateY(3px)

.link-gray--bottom
	position relative
	display inline

	transition color 0.3s $transitionAnimation

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background #979797

		opacity 1

		transform translateY(0px)

		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&:hover
		&:after
			opacity 0
			transform translateY(5px)

.button
	display block
	width 100%

	padding 13px 0
	box-sizing border-box

	text-align center

	font-size 16px
	font-weight 600

	letter-spacing 0.5px

	&--black
		background #000
		color #fff

	&-color--pink
		transition background 0.3s $transitionAnimation, color 0.3s $transitionAnimation

		&:hover
			background $colorPink
			color $colorBlack

	&--border-black
		border 1px solid $colorBlack
		transition background 0.3s $transitionAnimation, color 0.3s $transitionAnimation

		&:hover
			background $colorBlack
			color #fff
/* //link button */

/* form */
.form
	width 100%

	.form-row
		display flex
		justify-content space-between
		margin-bottom 40px

		.form-holder
			position relative

			label.error
				position absolute
				left 0
				bottom -20px
				color #d0021b
				font-size 14px

			&--inside
				.form-item
					padding-right 150px

				.button
					position absolute
					top 2px
					right 2px
					bottom 2px
					max-width 140px

		&--w1
			.form-holder
				width 100%
		&--w2
			.form-holder
				width 47%

		.form-label
			display block
			margin-bottom 10px

			.form-label-text
				font-size 16px
				font-weight 600

		.form-item
			width 100%

			&.error
				border 1px solid #d0021b

		.form-item--text
		.form-item--textarea
			position relative
			width 100%
			padding 12px 15px
			box-sizing border-box
			border 1px solid #4a4a4a
			font-size 16px

			color $colorBlack
			background #fff

			transition box-shadow 0.3s $transitionAnimation

		.form-item--text
		.form-item--textarea
			&::-webkit-input-placeholder
				color #9B9B9B
				font-family "ProximaNovaRegular"

			&:-moz-placeholder
				color #9B9B9B
				font-family "ProximaNovaRegular"

		.form-item--textarea
			resize none

			&before
				content ""

		.form-item--text-search
			padding 10px 0 20px 0

			border none
			border-bottom 1px solid #000

			font-size 18px
			font-weight 600
			color $colorBlack

		.form-label
			.jcf-checkbox
				position relative
				display inline-block
				width 30px
				height 30px
				vertical-align middle
				border 1px solid #979797
				margin-right 10px

				label.error
					position absolute
					top 105%
					left 0
					color red
					white-space nowrap

				span
					position: absolute
					top 5.4px
					left 4.9px
					display block
					width 20px
					height 20px
					background #979797
					transform scale(0.5)
					opacity 0
					transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

				&.jcf-checked
					span
						opacity 1
						transform translateY(0)

	.jcf-select-form-select
		position relative

		display inline-block
		width 100%

		padding 10px 15px
		box-sizing border-box

		background #fff

		border 1px solid #4A4A4A

		cursor pointer

		transition border-color 0.3s $transitionAnimation

		&.jcf-drop-active
			border-color $colorBlack

		.jcf-select-text
			letter-spacing 0.5px
			font-size 14px

		.jcf-select-opener
			position absolute
			right 15px
			top 50%
			width 15px
			height 10px

			margin-top -3px
			transition transform 0.3s $transitionAnimation

			&:before
			&:after
				content ""
				position absolute
				top 0
				left 0
				display block
				width 100%
				height 100%
				background-repeat no-repeat
				transition opacity 0.3s $transitionAnimation

			&:before
				opacity 1
				background-image url("../svg/arrow-bottom.svg")

			&:after
				opacity 0
				background-image url("../svg/arrow-bottom-pink.svg")

		&:hover
			.jcf-select-opener
				&:before
					opacity 0

				&:after
					opacity 1

		&--gray
			background #F6F6F6
			border 1px solid #F6F6F6

		&--darkgray
			background #fff
			border 1px solid #4a4a4a

		.jcf-select-placeholder
			margin-right 10px
			font-size 16px
			color #9B9B9B

	.jcf-radio
		cursor pointer
		overflow hidden

		input[type=radio]
			height 100%

		span
			position absolute
			top 50%
			left 50%
			display flex
			align-items center
			justify-content center

			width 30px
			height 30px

			margin-top -15px
			margin-left -15px
			border-radius 50%

			z-index 10

		&.form-item--radio-catalog
			position relative
			display inline-block
			width 40px
			height 40px

			margin-right 10px

			border-radius 50%

			border 1px solid transparent

			transition border-color 0.3s $transitionAnimation

			&.jcf-checked
				border-color #4A4A4A

			&:hover
				border-color #4A4A4A

			&:last-child
				margin-right 0


.jcf-select-drop
	&.jcf-select-form-select
		display block
		padding 10px 15px
		box-sizing border-box
		background #fff

		border-right 1px solid $colorBlack
		border-left 1px solid $colorBlack
		border-bottom 1px solid $colorBlack

		z-index 1000

		&.jcf-drop-flipped
			border-right 1px solid $colorBlack
			border-left 1px solid $colorBlack
			border-top 1px solid $colorBlack

		 .jcf-list-content
			 li
				cursor pointer
				margin-bottom 20px

				&.hide
					display none

				.jcf-option
					display block
					width 100%
					transition 0.3s color $transitionAnimation

				.jcf-option-hide
					display none

				&:hover
					.jcf-option
						color $colorPink

					&.jcf-option-disabled
						display none

				&:last-child
					margin-bottom 0

/* //form */

/* load */
.load
	position relative
	width 100%
	height 75px
	margin-bottom 100px
	text-align center

	.load-container
		display inline-block

	.load-more
		position absolute

		left 50%
		margin-left -25px

		display block
		width 45px
		height 45px

		cursor pointer

		transition transform 0.3s $transitionAnimation

		&:before
			content ""
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background-image url(../svg/circle-arrow.svg)
			background-repeat no-repeat
			background-size cover

			opacity 1

			transition opacity 0.3s $transitionAnimation

		&:after
			content ""
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background-image url(../svg/circle-arrow-pink.svg)
			background-repeat no-repeat
			background-size cover

			opacity 0

			transition opacity 0.3s $transitionAnimation

		&.loading
			animation-name spin
			animation-duration 300ms
			animation-iteration-count infinite
			animation-timing-function linear

	.load-text
		display block
		padding-top 70px
		font-size 14px

		text-transform uppercase
		text-align center

		transition color 0.3s $transitionAnimation

	.load-container
		&:hover
			.load-more
				transform rotate(360deg)

				&:before
					opacity 0
				&:after
					opacity 1

			.load-text
				color $colorPink

/* //load */

.flex-list
	display flex
	justify-content flex-start
	align-items flex-start

	margin-bottom 100px

	flex-wrap wrap

	&--3
		.flex-item
			max-width 30.53333%
			width 100%

			margin-right 4%

			&:nth-child(3n)
			&:last-child
				margin-right 0

	.flex-item
		position relative
		margin-bottom 80px

		opacity 1

		transition opacity 0.6s $transitionAnimation, transform 0.6s $transitionAnimation, background 0.3s $transitionAnimation
		transform translateY(0)

		&.hide
			opacity 0
			transform translateY(50px)

		.flex-holder
			display flex
			justify-content center
			align-items center

			height 380px
			background $colorGray

			margin-bottom 25px

			text-align center

			background-position center
			background-repeat no-repeat
			background-size cover

			transition box-shadow 0.3s $transitionAnimation

			.flex-img
				display block
				max-width 70%

		.flex-title-container
			margin-bottom 30px

		.flex-title
			position relative

			font-family "ProximaNovaBold"
			font-size 22px

			&:after
				content ""
				position absolute
				top 100%
				left 0
				width 100%
				height 1px
				background #000

				opacity 0

				transform translateY(10px)

				transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

		.flex-title-prev
			display block
			padding 20px 40px

			line-height 44px
			font-size 34px
			font-family "ProximaNovaBold"

			color #fff

		&:hover
			.flex-title
				&:after
					opacity 1
					transform translateY(3px)

			.flex-holder
				box-shadow 0px 10px 5px 0px rgba(0,0,0,0.1)

		.flex-tags-container
			margin-bottom 25px

			.flex-category
				display inline-block
				margin-right 10px
				font-size 14px
				text-transform uppercase

			.flex-brand
				font-size 14px
				text-transform uppercase

		.flex-text
			margin-bottom 25px
			font-size 16px
			line-height 24px

			color #4A4A4A

		.flex-price
			letter-spacing 1px
			font-size 16px
			font-weight 600

			text-transform uppercase

		.flex-newprice
			display inline-block
			letter-spacing 1px
			margin-right 10px
			padding 5px 7px 5px 5px
			box-sizing border-box

			vertical-align middle

			background $colorYellow
			font-weight 600
			font-size 16px

		.flex-oldprice
			position relative
			display inline-block

			padding 5px 7px 5px 5px
			box-sizing border-box

			vertical-align middle
			color #9B9B9B

			overflow hidden
			font-weight 600
			font-size 16px

			letter-spacing 1px

			&:after
